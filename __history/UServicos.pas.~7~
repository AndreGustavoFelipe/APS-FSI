type
  TFormServicos = class(TForm)
    Panel1: TPanel;
    Panel8: TPanel;
    btnNovoUsuario: TSpeedButton;
    Panel3: TPanel;
    btnEditar: TSpeedButton;
    Panel4: TPanel;
    btnExcluir: TSpeedButton;
    Panel9: TPanel;
    btnVoltar: TSpeedButton;
    Panel2: TPanel;
    pgControl: TPageControl;
    tabListagem: TTabSheet;
    tabCad: TTabSheet;
    Panel6: TPanel;
    edtCadUsuario: TEdit;
